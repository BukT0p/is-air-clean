<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.goodcodeforfun.isairclean.SummaryFragmentFuture"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/summaryFutureWrapLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/future_label"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/summaryFutureLabelTextView"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/summaryFutureCarbonTextView"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tonns_co2"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/summaryFutureCarbonLabelTextView"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/summaryFutureEnergyTextView"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mwh_energy"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/summaryFutureEnergyLabelTextView"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/summaryFutureIntensityTextView"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kg_co2_per_mwh"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/summaryFutureIntensityLabelTextView"
            android:textColor="@color/white" />

    </LinearLayout>

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/pieChartFutureWebView"
        android:layout_alignBottom="@+id/summaryFutureWrapLinearLayout"
        android:layout_toEndOf="@+id/summaryFutureWrapLinearLayout"
        android:layout_toRightOf="@+id/summaryFutureWrapLinearLayout" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/summaryFutureWrapLinearLayout"
        android:layout_alignRight="@+id/pieChartFutureWebView"
        android:layout_alignEnd="@+id/pieChartFutureWebView"
        android:id="@+id/frameLayout">
    </FrameLayout>

</RelativeLayout>