<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.goodcodeforfun.isairclean.fragments.SummaryFragmentCurrent">

    <LinearLayout
        android:id="@+id/summaryCurrentWrapLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/summaryCurrentLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/current_label"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/summaryCurrentCarbonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/no_data"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/summaryCurrentCarbonLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/tonns_co2"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/summaryCurrentEnergyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/no_data"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/summaryCurrentEnergyLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/mwh_energy"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/summaryCurrentIntensityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/no_data"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/summaryCurrentIntensityLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/kg_co2_per_mwh"
            android:textColor="@color/white"
            android:paddingBottom="10dp" />

    </LinearLayout>

    <com.goodcodeforfun.isairclean.PieChart
        android:id="@+id/pieChartCurrentView"
        android:layout_alignBottom="@+id/summaryCurrentWrapLinearLayout"
        android:layout_toEndOf="@+id/summaryCurrentWrapLinearLayout"
        android:layout_toRightOf="@+id/summaryCurrentWrapLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        custom:showTextLabels="true"
        custom:labelHeight="20dp"
        custom:labelWidth="110dp"
        custom:labelY="85dp"
        custom:labelPosition="left"
        custom:highlightStrength="1.12"
        android:background="@android:color/white"
        custom:pieRotation="0"
        custom:labelColor="@android:color/black"
        custom:autoCenterPointerInSlice="true"
        custom:pointerRadius="4dp" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pieChartCurrentView"
        android:layout_alignRight="@+id/pieChartCurrentView"
        android:layout_below="@+id/summaryCurrentWrapLinearLayout" />

</RelativeLayout>
